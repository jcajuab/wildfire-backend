# This file is a template.
# To use it, copy the contents into a `.env` file.
# Make sure to replace all placeholder values with actual, valid values before use.

# --- App ---
NODE_ENV='development'
PORT=8000

LOG_LEVEL='info'
LOG_PRETTY=true
SCHEDULE_TIMEZONE='UTC'

# --- Auth ---
# Path to htshadow file (email:bcrypt_hash per line). For local dev with db:seed:dummy-users, use path to wildfire/htshadow.
HTSHADOW_PATH='/etc/example_htshadow'

# Optional: email for db:seed:assign-super-admin (default: test@example.com)
# SEED_USER_EMAIL='test@example.com'

JWT_SECRET='replace_with_secure_secret'
JWT_ISSUER='wildfire'

# --- Content ---
CONTENT_MAX_UPLOAD_BYTES=104857600 # 100 MB

# --- Device ---
DEVICE_API_KEY='replace_with_secure_secret'

# --- MySQL ---
MYSQL_ROOT_PASSWORD='replace_with_secure_secret'

MYSQL_HOST='127.0.0.1'
MYSQL_PORT=3306
MYSQL_DATABASE='wildfire_db'
MYSQL_USER='wildfire'
MYSQL_PASSWORD='replace_with_secure_secret'

DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}"

# --- MinIO ---
MINIO_ROOT_USER='minioadmin'
MINIO_ROOT_PASSWORD='replace_with_secure_secret'

# MinIO endpoint (host or IP). Port 9000 = S3 API, 9001 = Console.
MINIO_ENDPOINT='localhost'
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=false
# Ensure that this bucket exists in MinIO. Create one if it doesn't yet!
MINIO_BUCKET='content'
MINIO_REGION='us-east-1'
# Timeout for MinIO/S3 operations (ms). Prevents indefinite hang if MinIO is unreachable.
MINIO_REQUEST_TIMEOUT_MS=15000
