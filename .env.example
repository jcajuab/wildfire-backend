# This file is a template.
# To use it, copy the contents into a `.env` file.
# Make sure to replace all placeholder values with actual, valid values before use.

# ====================
# App
# ====================
NODE_ENV='development'
PORT=8000

CORS_ORIGINS='http://localhost:3000'

LOG_LEVEL='info'
LOG_PRETTY=true

# ====================
# Audit
# ====================
AUDIT_QUEUE_ENABLED=true
AUDIT_QUEUE_CAPACITY=5000
AUDIT_FLUSH_BATCH_SIZE=100
AUDIT_FLUSH_INTERVAL_MS=250
AUDIT_EXPORT_MAX_ROWS=100000

# ====================
# Auth
# ====================
# Path to htshadow file (email:bcrypt_hash per line). For local dev with db:seed, use path to wildfire/htshadow.
HTSHADOW_PATH='./htshadow'

JWT_SECRET='replace_with_secure_secret'
JWT_ISSUER='wildfire'

# ====================
# Content
# ====================
CONTENT_MAX_UPLOAD_BYTES=104857600 # 100 MB

# ====================
# Devices
# ====================
DEVICE_API_KEY='replace_with_secure_secret'

# ====================
# Schedules
# ====================
SCHEDULE_TIMEZONE='UTC'

# ====================
# MySQL
# ====================
MYSQL_HOST='127.0.0.1'
MYSQL_PORT=3306
MYSQL_DATABASE='wildfire_db'
MYSQL_USER='wildfire'
MYSQL_PASSWORD='replace_with_secure_secret'

DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}"

MYSQL_ROOT_PASSWORD='replace_with_secure_secret'

# ====================
# MinIO
# ====================
MINIO_ENDPOINT='localhost'
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET='content'
MINIO_REGION='us-east-1'
MINIO_REQUEST_TIMEOUT_MS=15000
MINIO_CONSOLE_PORT=9001

MINIO_ROOT_USER='minioadmin'
MINIO_ROOT_PASSWORD='replace_with_secure_secret'
