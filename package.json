{
  "name": "wildfire-backend",
  "version": "1.0.0",
  "description": "A digital signage management system",
  "type": "module",
  "scripts": {
    "build": "bun run typecheck && bun build --target bun src/index.ts --outdir build",
    "check": "biome check && bun run check:architecture",
    "check:architecture": "bun run scripts/check-architecture-boundaries.ts",
    "db:drop": "dotenvx run -- bun run scripts/db/drop-all-tables.ts -- --force",
    "db:dump": "dotenvx run -- sh -c 'mysqldump --no-tablespaces -h \"$MYSQL_HOST\" -P \"$MYSQL_PORT\" -u \"$MYSQL_USER\" -p\"$MYSQL_PASSWORD\" \"$MYSQL_DATABASE\" > wildfire_db_dump_$(date +%Y%m%d_%H%M%S).sql'",
    "db:backfill:last-seen": "dotenvx run -- bun run scripts/db/backfill-device-last-seen.ts",
    "db:integrity": "dotenvx run -- bun run scripts/db-integrity-check.ts",
    "db:push": "dotenvx run -- drizzle-kit push",
    "db:seed": "dotenvx run -- bun run scripts/seed.ts",
    "db:studio": "dotenvx run -- drizzle-kit studio",
    "dev": "dotenvx run -- bun run --hot src/index.ts",
    "format": "prettier --write \"**/*.{md,yaml}\"",
    "test": "bun test",
    "test:integration": "RUN_INTEGRATION=true bun test tests/infrastructure",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@hono/standard-validator": "^0.2.2",
    "@scalar/hono-api-reference": "^0.9.40",
    "@t3-oss/env-core": "^0.13.10",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.11.9",
    "hono-openapi": "^1.2.0",
    "image-size": "^2.0.2",
    "mysql2": "^3.16.2",
    "pdf-lib": "^1.17.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/bun": "^1.3.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.0.16",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
